pipeline {
    agent any

    environment {
        DOCKER_HUB_USER = credentials('docker-hub-username')     // Jenkins credential ID
        DOCKER_HUB_PASS = credentials('docker-hub-password')     // Jenkins credential ID
    }

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/kasun020/recipe-app-0.git'
            }
        }

        stage('Build Docker Images') {
            steps {
                sh '''
                docker build -t $DOCKER_HUB_USER/recipe-frontend:latest ./frontend
                docker build -t $DOCKER_HUB_USER/recipe-backend:latest ./backend
                '''
            }
        }

        stage('Push Docker Images') {
            steps {
                sh '''
                echo "$DOCKER_HUB_PASS" | docker login -u "$DOCKER_HUB_USER" --password-stdin
                docker push $DOCKER_HUB_USER/recipe-frontend:latest
                docker push $DOCKER_HUB_USER/recipe-backend:latest
                '''
            }
        }

        stage('Deploy Using Ansible') {
            steps {
                sh '''
                ansible-playbook -i ec2-inventory.ini deploy.yml
                '''
            }
        }
    }
}
