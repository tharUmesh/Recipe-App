pipeline {
    agent any

    environment {
        DOCKER_IMAGE_BACKEND = 'recipe-backend'
        DOCKER_IMAGE_FRONTEND = 'recipe-frontend'
    }

    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/tharUmesh/Recipe-App.git'
            }
        }

        stage('Build Backend Docker Image') {
            steps {
                dir('backend') {
                    script {
                        sh 'docker build -t $DOCKER_IMAGE_BACKEND .'
                    }
                }
            }
        }

        stage('Build Frontend Docker Image') {
            steps {
                dir('frontend') {
                    script {
                        sh 'docker build -t $DOCKER_IMAGE_FRONTEND .'
                    }
                }
            }
        }

        stage('Cleanup') {
            steps {
                script {
                    sh 'docker image prune -f'
                }
            }
        }
    }
}
